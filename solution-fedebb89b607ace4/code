#include<cstdio>
#include<algorithm>
using namespace std;
const long long mod = 1e9+7;
long long n,m;

int main()
{
    scanf("%lld %lld",&n,&m);
    long long ans = (n%mod)*(m%mod)%mod;
    long long res = 0;
    long long maxi = min(n,m);
    for(long long i=1;i<=maxi;i++)
    {
        long long l=i;
        long long r = min(n/(n/i),m);
        long long sum = l+r;
        long long num = r-l+1;
        if(sum%2==0)
            sum /= 2;
        else
            num /= 2;
        long long cnt = (sum%mod)*(num%mod)%mod;
        cnt = cnt*(n/i)%mod;
        res = (res + cnt) %mod;
        i = r;
    }
    // res %= mod;
    printf("%lld\n",(ans-res+mod)%mod);
}